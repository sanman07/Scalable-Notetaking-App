/* Simple list alignment using hanging indent */
.rich-text-editor-content .list-item {
  margin: 0.25rem 0;
  display: flex;
  align-items: baseline;
  position: relative;
}

.rich-text-editor-content .bullet-item {
  padding-left: 0;
  text-indent: 0;
}

.rich-text-editor-content .numbered-item {
  padding-left: 0;
  text-indent: 0;
}

/* Ensure proper baseline alignment */
.rich-text-editor-content .list-item {
  vertical-align: baseline;
}

/* Placeholder styling for contentEditable */
.rich-text-editor-content:empty:before {
  content: attr(data-placeholder);
  color: #9ca3af;
  font-style: italic;
  pointer-events: none;
}

/* Use CSS to separate marker from content */
.rich-text-editor-content .bullet-item::before {
  content: 'â€¢ ';
  flex-shrink: 0;
  width: 1.5rem;
  font-size: 15px;
  line-height: 1.6;
  color: inherit;
  font-family: inherit;
}

.rich-text-editor-content .numbered-item::before {
  content: counter(list-counter) '. ';
  counter-increment: list-counter;
  flex-shrink: 0;
  width: 2rem;
  font-size: 15px;
  line-height: 1.6;
  color: inherit;
  font-family: inherit;
}

/* Reset counter for each editor */
.rich-text-editor-content {
  counter-reset: list-counter;
}

/* Perfect list alignment using CSS Grid */
.rich-text-editor-content .list-item {
  margin: 0.25rem 0;
  display: grid;
  grid-template-columns: 2rem 1fr;
  gap: 0;
  align-items: start;
  position: relative;
