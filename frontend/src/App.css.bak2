.rich-text-editor-content .bullet-item::before {
  content: 'â€¢';
  grid-column: 1;
  font-size: 15px;
  line-height: 1.6;
  color: inherit;
  font-family: inherit;
  text-align: left;
  padding-right: 0.5rem;
