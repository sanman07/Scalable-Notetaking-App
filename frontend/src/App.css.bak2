/* Slash Command Menu */
.slash-menu {
  background: #ffffff;
  border: 1px solid #e5e7eb;
  border-radius: 12px;
  box-shadow: 0 10px 25px rgba(0,0,0,0.1), 0 4px 6px rgba(0,0,0,0.05);
  padding: 0.5rem;
  min-width: 280px;
  max-height: 300px;
  overflow-y: auto;
  z-index: 1000;
}

.slash-command {
  display: flex;
  align-items: center;
  padding: 0.75rem;
  cursor: pointer;
  transition: all 0.2s ease;
  border: none;
  width: 100%;
  text-align: left;
  background: transparent;
  border-radius: 8px;
  margin-bottom: 2px;
}

